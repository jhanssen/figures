extends layout

block content
  h1 Figure
  h2= name

  a(href="/figures/add/image?id=#{figure}") +note
  ul
    each note, i in notes
      li
        div= note.text
        a(href="/figures/remove/note?id=#{note.id}")
  a(href="/figures/add/image?id=#{figure}") +image
  ul
    each item, i in images
      li
        img(src="/figures/list/image?id=#{item}")
        a(href="/figures/remove/image?id=#{item}&figureid=#{figure}") -
