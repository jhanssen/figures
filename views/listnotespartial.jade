each item, i in notes
  li
    div !{item.note.replace(/\n/g, '<br/>')}
      a(href="javascript:if (window.confirm('Really remove?')) window.location.assign('/figures/remove/note?id=#{item._id}')") -
      a(href="/figures/add/notefigure?id=#{item._id}") +
    ul
      each fig, i in item.figures
        li
          a(href="/figures/list/figure?id=#{fig.toHexString()}" onmouseenter="showImage('#{fig.toHexString()}')" onmouseleave="hideImage()") !{figures[fig.toHexString()].name}
